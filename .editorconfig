# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

# Global settings
[*]
# Unix-style line endings
end_of_line = lf
# UTF-8 encoding
charset = utf-8
# Remove trailing whitespace
trim_trailing_whitespace = true
# Ensure last line of file ends with new line
insert_final_newline = true

# Settings for Go files
[*.go]
# Indetation uses tab (standard)
indent_style = tab
# Tab width should be 8 spaces (standard)
indent_size = 2
# Max line length (120 characters recommended)
max_line_length = 120

# Ignore .tf files
[*.tf]
end_of_line = unset
charset = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
indent_style = unset
indent_size = unset
max_line_length = unset
